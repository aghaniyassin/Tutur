<div class="row justify-content-md-center">
  <%= render 'cars/partials/thumbnail', car: @car %>
  <div class="col-7">
    <div class="card">
      <h5 class="card-header"><%= @car.title %></h5>
      <div class="card-body mb-4">
        <div class="mt-2 mb-4">
          <p><%= @car.description %></p>
        </div>
        <%= render 'cars/partials/technical_spec', car: @car %>
        <%= render 'users/partials/owner_overview', owner: @car.user %>
      </div>
    </div>
  </div>
</div>
