<h2>Your rentals</h2>
<hr>

<% if @rentals.any? %>
  <div class="row">
    <% @rentals.each do |rental| %>
      <div class="col-3">
        <%= link_to rental  do %><%= render 'rentals/partials/preview', rental: rental %><% end %>
      </div>
    <% end %>
  </div>

  <%= render 'layouts/paginate', collection: @rentals %>
<% else %>
  <div class="alert alert-primary p-4" role="alert">
    <h5>You haven't rented yet but you can do it by clicking here:</h5>
    <%= link_to 'Find a car', cars_path, class: 'btn btn-primary' %>
  </div>
<% end %>
